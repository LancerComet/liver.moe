// Box Sizing.
.w-100
  width: 100%

.h-100
  height: 100%

.dp-none
  display: none

.b-box
  box-sizing: border-box

// Position.
.p-a
  position: absolute

.p-r
  position: relative

.m-auto
  margin: 0 auto

.f-left
.f-l
  float: left

for $num in (1 ... 5)
  .z-{$num}
    z-index: $num

// Text.
.t-center
.t-c
  text-align: center

// Visual.
.bg-no-r
  background-repeat: no-repeat

.bg-contain
  background-size: contain

.v-hidden
  visibility: hidden
